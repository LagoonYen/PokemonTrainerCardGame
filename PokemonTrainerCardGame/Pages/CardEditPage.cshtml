@page
@model PokemonTrainerCardGame.Pages.CardEditModel
@{
    ViewData["Title"] = "PTCG卡牌編輯";
}

<h1>@ViewData["Title"]</h1>

<div class="container-fluid">
	<div class="row">
		<div class="py-2">
			<select class="" id="cardSetList">
					<option selected>系列選擇</option>
			</select>
			<input class="search-bar" type="text" name="search" id="search" placeholder="輸入名稱">
			<button class="search-btn">搜尋</button>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-12 px-0 mr-2" style="overflow-y:auto;max-height:450px;">
			<table id="cardShowStage" class="table table-striped table-bordered table-hover" style="background-color:lightblue;">
				<thead class="thead-dark">
					<tr>
						<th class="">系列</th>
						<th class="">環境</th>
						<th class="">編號</th>
						<th class="">稀有度</th>
						<th class="">特殊規則</th>
						<th class="">類別</th>
						<th class="">細項</th>
						<th class="">HP</th>
						<th class="">名稱</th>
						<th class="">屬性</th>
						<th class="">圖片預覽</th>
						<th class="">新增時間</th>
						<th class="">修改時間</th>
					</tr>
				</thead>
				<tbody style="">
				</tbody>
			</table>
		</div>
		<div id="singleCardInfo" class="col-6" style="background-color:lightgreen;height:500px">
			<div class="row p-2 m-2" style:"">
				<form id="CardInfoForm" enctype="multipart/form-data">
					<div class:"form-group">
						<input type="hidden" name="CardId" id="cardIdEdit">
						<p>系列:
							<select class="" id="cardVersionEdit" name="cardVersionEdit">
								<option selected>系列選擇</option>
							</select>
							<select class="" id="cardVersionEnviromentEdit" name="cardVersionEnviromentEdit">
								<option selected>環境選擇</option>
							</select>
						</p>
						<p>類別:
							<select class="" id="cardTypeEdit" name="cardTypeEdit">
								<option selected>類別選擇</option>
							</select>
							<select class="" id="cardTypeDetailEdit" name="cardTypeDetailEdit">
								<option selected>類別細項</option>
							</select>
						</p>
						<p>
							稀有:
							<select class="" id="cardRankEdit" name="cardRankEdit">
								<option selected>稀有度選擇</option>
							</select>
						</p>
						<p>
							屬性:
							<select class="" id="cardAttributesEdit" name="cardAttributesEdit">
								<option selected>屬性選擇</option>
							</select>
						</p>
						<p>卡片編號:<input type="text" class="form-control" id="txtCardNum" name="CardNum" /></p>
						<p>卡片名稱<input type="text" class="form-control" id="txtCardName" name="CardName"/></p>
						<div>
							<input type="file" id="cardImgInput" name="CardImg" accept=".jpg, .jpeg, .png">
							<img id="previewCardImgInput" src="#" style="max-width:140px;max-height:450px"/>
						</div>
						<div>
							<input type="submit" value="新增卡片" id="formSubmitBtn"/>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
